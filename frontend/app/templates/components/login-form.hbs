<form {{action "authenticate" on="submit"}}>
  <div class="form-group">
    <label for="identification">Login</label>
    {{input value=identification placeholder="Enter Login" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password type="password" placeholder="Enter Password" class="form-control"}}
  </div>

  <button type="submit" class="center-block btn btn-default">Login</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
